<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity"
    android:background="@drawable/options_activity_background">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <ImageView
                android:id="@+id/image_selectImageSet"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/options_select_image_set_title" />

            <Spinner
                android:id="@+id/ImageSetSpinner"
                android:layout_width="483dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/image_numImagesForOneCard"
                android:layout_width="324dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/options_num_images_in_one_card" />

            <Spinner
                android:id="@+id/numOfImagesSpinner"
                android:layout_width="483dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/image_numCardsInDeck"
                android:layout_width="209dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/options_num_cards_in_deck" />

            <Spinner
                android:id="@+id/numOfCardsSpinner"
                android:layout_width="483dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/image_exportImages"
                android:layout_width="175dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/export_images_title" />
            <Spinner
                android:id="@+id/exportImagesSpinner"
                android:layout_width="511dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/difficulty"
                android:layout_width="92dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/options_difficulty" />

            <Spinner
                android:id="@+id/difficultyspinner"
                android:layout_width="502dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:id="@+id/custom_images_button"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/button_to_launch_flickr"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/custom_images_button" />

            <ImageButton
                android:id="@+id/gallery_images_button"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/gallery_images_button" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>