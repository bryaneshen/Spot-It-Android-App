<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/helpacitivity_background"
    tools:context=".HelpMenuActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="606dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/help_screen_description" />

    <LinearLayout
        android:layout_width="1057dp"
        android:layout_height="334dp"
        android:layout_marginTop="213dp"
        android:layout_marginBottom="168dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/txt_descriptionOfRules"
            android:layout_width="943dp"
            android:layout_height="142dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:text="@string/help_screen_text"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/source_1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/source_2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/source_3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>