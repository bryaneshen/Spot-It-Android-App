<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity"
    android:background="@drawable/options_activity_background">


    <ImageView
        android:id="@+id/image_selectImageSet"
        android:layout_width="170dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="209dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/options_select_image_set_title" />

    <Spinner
        android:id="@+id/ImageSetSpinner"
        android:layout_width="502dp"
        android:layout_height="16dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/image_numImagesForOneCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_selectImageSet" />

    <ImageView
        android:id="@+id/image_numImagesForOneCard"
        android:layout_width="282dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="209dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/numOfImagesSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageSetSpinner"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/options_num_images_in_one_card" />

    <ImageView
        android:id="@+id/image_numCardsInDeck"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numOfImagesSpinner"
        app:srcCompat="@drawable/options_num_cards_in_deck" />

    <Spinner
        android:id="@+id/numOfImagesSpinner"
        android:layout_width="502dp"
        android:layout_height="16dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <ImageButton
        android:id="@+id/custom_images_button"
        android:layout_width="206dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="327dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_to_launch_flickr"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numOfCardsSpinner"
        app:srcCompat="@drawable/custom_images_button" />

    <Spinner
        android:id="@+id/numOfCardsSpinner"
        android:layout_width="502dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_numCardsInDeck" />

    <ImageView
        android:id="@+id/difficulty"
        android:layout_width="92dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/custom_images_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numOfCardsSpinner"
        app:srcCompat="@drawable/options_difficulty" />

    <Spinner
        android:id="@+id/difficultyspinner"
        android:layout_width="502dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/custom_images_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/difficulty" />

</androidx.constraintlayout.widget.ConstraintLayout>